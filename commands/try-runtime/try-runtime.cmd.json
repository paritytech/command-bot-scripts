{
  "$schema": "../../schema.cmd.json",
  "command": {
    "id": "try-runtime",
    "label": "Try Runtime",
    "configuration": {
      "gitlab": {
        "job": {
          "tags": ["linux-docker"]
        },
        "variables": {}
      }
    },
    "presets": {
      "default": {
        "description": "Try-Runtime - runs `cargo run --release --quiet --features=try-runtime try-runtime --chain=<CHAIN> --execution=Wasm --no-spec-check-panic on-runtime-upgrade live --uri=<URI>`",
        "args": {
          "chain": {
            "short": "c",
            "type_rule": "/^[a-z_-]+$/"
          },
          "uri": {
            "short": "u",
            "type_rule": [".+"]
          }
        }
      }
    }
  }
}
