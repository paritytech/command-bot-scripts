{
  "$schema": "../../node_modules/command-bot/src/schema/schema.cmd.json",
  "command": {
    "description": "Runs `node-try-runtime try-runtime --runtime runtime-try-runtime.wasm -lruntime=debug on-runtime-upgrade live --uri wss://${NETWORK}-try-runtime-node.parity-chains.parity.io:443`",
    "configuration": { "gitlab": { "job": { "tags": ["linux-docker-vm-c2"], "variables": {} } } },
    "presets": {
      "polkadot": {
        "description": "Run try-runtime with specified runtime for Polkadot",
        "repos": ["polkadot", "command-bot-test"],
        "args": {
          "node":   { "label": "Node", "type_one_of": ["polkadot"] },
          "runtime":{ "label": "Runtime", "type_one_of": ["polkadot", "kusama", "westend", "rococo"] }
        }
      },
      "trappist": {
        "description": "Run try-runtime with for Trappist",
        "repos": ["trappist"],
        "args": {
          "node":   { "label": "Node", "type_one_of": ["trappist-node"] },
          "runtime":{ "label": "Runtime", "type_one_of": ["trappist"] }
        }
      }
    }
  }
}
